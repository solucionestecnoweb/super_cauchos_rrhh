<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_inventory_form_kardex" model="ir.ui.view">
            <field name="name">stock.inventory.form.kardex</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
                <field name="arch" type="xml">
                <field name="product_ids" position="after">
                    <field name="is_initial"/>
                </field>
            </field>
        </record>

        <record id="stock_inventory_line_tree2_kardex" model="ir.ui.view">
            <field name="name">stock.inventory.line.tree2.kardex</field>
            <field name="model">stock.inventory.line</field>
            <field name="inherit_id" ref="stock.stock_inventory_line_tree2"/>
                <field name="arch" type="xml">
                <field name="product_qty" position="after">
                    <field name="initial_cost" attrs="{'invisible': [('is_initial', '=', False)],'readonly': [('state', '!=', 'confirm')]}"/>
                    <field name="is_initial" invisible="1"/>
                </field>
            </field>
        </record>

    </data>
</odoo>