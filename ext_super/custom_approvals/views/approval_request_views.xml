<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="approval_request_inherit_view_tree" model="ir.ui.view">
            <field name="name">approval.request.inherit.view.tree</field>
            <field name="model">approval.request</field>
            <field name="inherit_id" ref="approvals.approval_request_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="date_issue" optional="hide"/>
                </xpath>
                 <xpath expr="//field[@name='request_owner_id']" position="after">
                     <field name="partner_id" string="Cliente/Proveedor"/>
                     <field name="reference"/>
                     <field name="amount"/>
                </xpath>
            </field>
        </record>

        <record id="approval_request_view_inherit_form" model="ir.ui.view">
            <field name="name">approval.request.inherit.view.form</field>
            <field name="model">approval.request</field>
            <field name="inherit_id" ref="approvals.approval_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_withdraw']" position="replace"/>
                <xpath expr="//button[@name='action_draft']" position="replace"/>

                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="groups">approvals.group_approval_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='action_approve']" position="attributes">
                    <attribute name="groups">approvals.group_approval_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">approvals.group_approval_manager</attribute>
                </xpath>
                <xpath expr="//widget[@name='attach_document'][1]" position="attributes">
                    <attribute name="groups">approvals.group_approval_manager</attribute>
                </xpath>
                <xpath expr="//widget[@name='attach_document'][2]" position="attributes">
                    <attribute name="groups">approvals.group_approval_manager</attribute>
                </xpath>
                 <xpath expr="//field[@name='partner_id']" position="attributes">
                      <attribute name="string">Cliente/Proveedor</attribute>
                      <attribute name="options">{'no_open': True}</attribute>
                      <attribute name="readonly">1</attribute>
                 </xpath>
                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='reference']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='reference']" position="after">
                    <field name="is_rejected" invisible="1"/>
                    <field name="type_rejected" attrs="{'invisible':[('is_rejected', '=', 'no')]}"/>
                    <field name="date_issue" string='Fecha EmisiÃ³n' readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>