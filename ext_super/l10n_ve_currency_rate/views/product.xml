<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        
        <!-- model.name inherit form view -->
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//label[@for='list_price']" position="before">
                    <field name="list_price_usd" widget="monetary" options="{'currency_field': 'currency_usd_id', 'field_digits': True}" />
                    <field name="currency_usd_id" invisible="1"/>
                </xpath>
            </field>
        </record>
        <!-- model.name inherit kanban view -->
        <record id="product_template_kanban_view" model="ir.ui.view">
            <field name="name">product.template.inherit.view.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <!-- Add you xpath here -->
                <xpath expr="//field[@name='currency_id']" position="before">
                    <field name="currency_usd_id"/>
                </xpath>
                <xpath expr="//ul[last()]" position="before">
                    <ul attrs="{'invisible': [('list_price_usd','=',0)]}" >
                        <li>Price: <field name="list_price_usd" widget="monetary" options="{'currency_field': 'currency_usd_id', 'field_digits': True}"/>
                        </li>
                    </ul>
                </xpath>
            </field>
        </record>

        <!-- product.template.attribute.value inherit form view -->
        <record id="product_template_attribute_value_view_form" model="ir.ui.view">
            <field name="name">product.template.attribute.value.inherit.view.form</field>
            <field name="model">product.template.attribute.value</field>
            <field name="inherit_id" ref="product.product_template_attribute_value_view_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='price_extra']" position="before">
                    <field name="list_price_usd" widget="monetary" options="{'currency_field': 'currency_usd_id', 'field_digits': True}" />
                    <field name="currency_usd_id" invisible="1"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>