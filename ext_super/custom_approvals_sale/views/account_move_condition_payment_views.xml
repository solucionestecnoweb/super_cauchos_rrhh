<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_condition_payment_approval_view_tree" model="ir.ui.view">
        <field name="name">account.condition.payment.approval.view.tree</field>
        <field name="model">account.condition.payment</field>
        <field name="inherit_id" ref="account_move_extend_fields_reports.account_condition_payment_view_tree"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='name']" position="after">
                <field name="is_approval" widget="boolean_toggle"/>
             </xpath>
        </field>
    </record>

    <record id="account_condition_payment_approvals_view_form" model="ir.ui.view">
        <field name="name">account.condition.payment.approval.view.form</field>
        <field name="model">account.condition.payment</field>
        <field name="inherit_id" ref="account_move_extend_fields_reports.account_condition_payment_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='name']" position="after">
                <field name="is_approval" widget="boolean_toggle"/>
                <field name="approver_ids" widget="many2many_tags"/>
             </xpath>
        </field>
    </record>
</odoo>
