<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- closing.sales tree view -->
    <record id="closing_sales_view_tree" model="ir.ui.view">
        <field name="name">closing.sales.view.tree</field>
        <field name="model">closing.sales</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name" optional="show"/>
                <field name="last_update" optional="show"/>
                <field name="invoice_num" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="currency_rate" optional="show"/>
                <field name="journal_id" optional="show"/>
                <field name="amount" optional="show"/>
                <field name="currency_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="closing_sales_action" model="ir.actions.act_window">
        <field name="name">Cierre de Cobranza</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">closing.sales</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- account.journal inherit form view -->
    <record id="modo_pagos_view_form" model="ir.ui.view">
        <field name="name">account.journal.inherit.view.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='type']" position="after">
                <field name="closing_report"/>
            </xpath>
        </field>
    </record>

</odoo>
