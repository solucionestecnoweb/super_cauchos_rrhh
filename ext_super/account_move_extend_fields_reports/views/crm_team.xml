<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- crm.team inherit form view -->
        <record model="ir.ui.view" id="crm_team_view_form">
            <field name="name">crm.team.form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='members']" position="after">
                    <page name="vendedore" string="Vendedores">
                        <field name="sellers_id" widget="many2many" domain="[('is_seller', '=', True)]" options="{'not_delete': True}" />
                    </page>
                </xpath>
            </field>
        </record>

</odoo>
