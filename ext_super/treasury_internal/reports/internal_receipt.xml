<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Formato Recibo de pago -->
    <record id="paperformat_receipt" model="report.paperformat">
        <field name="name">Recibo de Transferencia</field>
        <!-- <field name="default" eval="True"/> -->
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">120</field>
    </record>

    <report 
            id="action_internal_receipt" 
            model="internal.transfers" 
            string="Recibo de transferencia" 
            report_type="qweb-pdf"
            paperformat="treasury_internal.paperformat_receipt"
            name="treasury_internal.internal_receipt" 
            file="treasury_internal.internal_receipt"
            print_report_name="(object.state == 'draft' and 'Borrador - %s' % (object.name)) or 'Recibo de transferencia - %s' % (object.name)"
            />

        <template id="external_layout_internal_receipt">
            <div class="header">
            </div>

            <div class="article o_report_layout_standard">
                <t t-raw="0"/>
            </div>

            <div class="footer">
            </div>
        </template>

        <template id="internal_receipt">
            <t t-call="web.html_container">
