                                <!-- Primera impresión -->
                                <div class="container" style="height: 800px;">
                                    <div>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-5 text-center">
                                                    <img t-if="o.out_company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.out_company_id.logo)" style="max-height: 100px; max-width: 200px;"/><br/>
                                                    <span style="font-size:16px;"><t t-esc="o.out_company_id.name"/></span><br/>
                                                </div>
                                                <div class="col-3">
                                                </div>
                                                <div class="col-4 text-left">
                                                    <t t-if="o.state == 'draft'">
                                                        <b style="font-size:16px;">Borrador <t t-esc="o.name"/></b><br/>
                                                    </t>
                                                    <t t-elif="o.state == 'cancel'">
                                                        <b style="font-size:16px;">Recibo N° <t t-esc="o.name"/> (Cancelado)</b><br/>
                                                    </t>
                                                    <t t-else="">
                                                        <b style="font-size:16px;">Recibo N° <t t-esc="o.name"/></b><br/>
                                                    </t>
                                                    <b style="font-size:14px;">Concepto de Pago: <t t-esc="o.payment_concept"/></b>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div style="margin-top: 100px;">
