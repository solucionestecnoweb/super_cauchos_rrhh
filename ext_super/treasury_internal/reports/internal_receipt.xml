                                                    <!-- Fin cantidad de columnas -->

                                                    <!-- Cabecera -->
                                                    <thead>
                                                        <tr>
                                                            <th colspan="9" class="text-center border border-dark" style="background-color: #cacaca; font-size:16px;">Compañía que Envía Dinero</th>
                                                        </tr>
                                                        <tr>
                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Compañía Origen</th>
                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Fecha de solicitud</th>
                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Importe</th>
