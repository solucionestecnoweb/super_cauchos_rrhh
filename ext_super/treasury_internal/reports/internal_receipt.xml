                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Tasa</th>
                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Origen de Fondos</th>
                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Cuenta Transitoria</th>
                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Referencia</th>
                                                            <th class="text-center border border-dark" style="background-color: #cacaca; font-size:14px;">Asiento Origen</th>
                                                        </tr>
                                                    </thead>
